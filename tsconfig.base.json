{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"lib": ["ES2020"],
		"strict": true,

		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,

		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"noPropertyAccessFromIndexSignature": true,

		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,

		"resolveJsonModule": true,
		"isolatedModules": true
	}
}
